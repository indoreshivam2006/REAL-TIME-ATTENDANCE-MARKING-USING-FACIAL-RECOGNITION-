# Environment Variables for Backend
# Copy this to .env in the backend directory
# DO NOT commit .env to git

# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_DEBUG=False

# MongoDB Configuration (Optional - uses JSON fallback if not set)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=face_recognition_attendance

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# CORS Configuration (Add your Netlify frontend URL)
CORS_ORIGINS=https://your-app.netlify.app,http://localhost:3000

# Face Recognition Configuration
FACE_RECOGNITION_THRESHOLD=110
MIN_FACE_SIZE=20
SCALE_FACTOR=1.05
MIN_NEIGHBORS=3
FACE_RECOGNITION_MODE=cnn
CNN_SIMILARITY_THRESHOLD=0.35

# Upload Configuration
UPLOAD_FOLDER=uploads
FACE_IMAGES_FOLDER=uploads/faces
MODELS_FOLDER=models
